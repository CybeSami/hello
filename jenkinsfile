pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                script {
                    sh 'pip install -r requirements.txt'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    sh 'python hello_world.py'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Aucun test pour le moment'
            }
        }
    }
}
